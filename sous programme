void affbc(int a,int b){
    char casse='c';
    ter[a][b]=casse;
    gotoligcol(a,b);
    printf("%c",ter[a][b]);
}

void pause (int ms){
    clock_t timeDelay = ms + clock();
    char touche;
    while (timeDelay>clock()){
        if (kbhit()) {
            touche = getch();
            if (touche == 'p'){
            break;
            }
        }
    }
}

